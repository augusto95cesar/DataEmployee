<Window x:Class="DataEmployee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataEmployee"
        mc:Ignorable="d"
        Title="Employee" Height="450" Width="800">
    <Grid>
        <ListView Background="Black"  Name="estouro" Margin="0,166,2,1" >
            <ListView.View>
                <GridView>
                    <GridViewColumn  DisplayMemberBinding="{Binding Nome}" Header="Nome"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Cpf}" Header="Cpf"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding <Button Content="Atualizar" Width="50"    />}" ></GridViewColumn>
                     
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
